@model IEnumerable<N_K_School.Models.Student>


@{
    ViewBag.Title = "StudentList";
}

<h2>StudentList</h2>

<table class="table">
    <tr>
        <th>
            GR No.
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>

        </th>
    </tr>
    @foreach(var st in Model) {
        <tr>
            <td>
                @Html.DisplayFor(m => st.StudentID)
            </td>
            <td>
                @Html.DisplayFor(m => st.FirstName)
                @Html.DisplayFor(m => st.LastName)
            </td>
            <td>
                @Html.DisplayFor(m => st.Email)
            </td>
            <td>
                @Html.ActionLink("View Details","StudentDetails",new { stid = st.StudentID})
            </td>
        </tr>
    }
</table>
